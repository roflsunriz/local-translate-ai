{
  "name": "local-translate-ai",
  "version": "1.4.0",
  "description": "Firefox extension for translation using local LLM (llama.cpp)",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "preview": "web-ext run -s dist --firefox=firefox",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "zip:source": "git archive --format=zip --output=source-code.zip HEAD",
    "zip:dist": "web-ext build -s dist -a web-ext-artifacts --overwrite-dest",
    "sign:unlisted": "web-ext sign -s dist --channel \"unlisted\"",
    "sign:listed": "web-ext sign -s dist --channel \"listed\"",
    "amo:unlisted": "npm run build && npm run zip:source && npm run zip:dist && npm run sign:unlisted",
    "amo:listed": "npm run build && npm run zip:source && npm run zip:dist && npm run sign:listed"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "dompurify": "^3.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.14",
    "web-ext": "^9.2.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/roflsunriz/local-translate-ai"
  },
  "keywords": [
    "firefox-extension",
    "translation",
    "llama-cpp",
    "plamo",
    "local-llm"
  ]
}
